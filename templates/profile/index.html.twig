{% extends 'base.html.twig' %}

{% block title %}Профиль/StudyOn{% endblock %}

{% block body %}
    <h1>Профиль</h1>
    <p>Email: {{ userDto.username }}</p>
    <p>Роль:
        {% if is_granted('ROLE_SUPER_ADMIN') %}
            Администратор
        {% else %}
            Пользователь
        {% endif %}
    </p>
    <p>Баланс: {{ userDto.balance }}</p>
    <a class="btn btn-primary" href="{{ path('profile_transactions') }}" role="button">
        История
    </a>
{% endblock %}