{% extends 'base.html.twig' %}

{% block title %}Course{% endblock %}

{% block body %}
    <h1>Course</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ course.name }}</td>
                <td>Lessons</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ course.description }}</td>
                <td>{% for lesson in lessons %}
                        <a href="{{ path('lesson_show', {'id': lesson.id}) }}">{{ lesson.name }}</a>
                {% endfor %}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('course_index') }}">back to list</a>

    <a href="{{ path('course_edit', {'id': course.id}) }}">edit</a>

    <a href="{{ path('lesson_new', {'course': course.id}) }}">add lesson</a>
    {{ include('course/_delete_form.html.twig') }}
{% endblock %}
