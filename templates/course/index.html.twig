{% extends 'base.html.twig' %}

{% block title %}Course index{% endblock %}

{% block body %}
    <h1 class="font-weight-bold m-3">Курсы</h1>
        {#перебираем курсы#}
            <div class="row row-cols-2 mt-4">
            {% for course in courses %}
                <div class="col pl-3 pr-3 pb-4">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">{{ course.name }}</h4>
                            <p class="card-text text-secondary ">{{ course.description }}</p>
                            <a href="{{ path('course_show', {'id': course.id}) }} " id="course_select">Выбрать</a>
                        </div>
                    </div>
                </div>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
            </div>
    <div class="line mt-4 mb-4"></div>
    <a href="{{ path('course_new') }}" id="course_new" class="btn btn-outline-warning mr-3">Новый курс</a>
{% endblock %}
